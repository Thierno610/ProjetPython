# Configuration SafeDoc - Copiez ce fichier en .env et remplissez vos valeurs

# Base de données
DATABASE_URL=sqlite:///data/safedoc.db

# Clé de chiffrement principale (GÉNÉREZ UNE CLÉ UNIQUE ET SÉCURISÉE)
# Ne partagez JAMAIS cette clé !
MASTER_KEY=changez_moi_par_une_cle_tres_longue_et_aleatoire_de_32_caracteres_minimum

# Chemins de stockage
DOCUMENTS_PATH=data/documents
ENCRYPTED_PATH=data/chiffres
TEMP_PATH=data/temp

# Configuration OCR
TESSERACT_PATH=C:/Program Files/Tesseract-OCR/tesseract.exe
OCR_LANGUAGE=fra

# Limites de stockage (en MB)
FREE_TIER_LIMIT_MB=500
PREMIUM_TIER_LIMIT_MB=50000

# Google Drive (optionnel - pour fonctionnalités Premium)
GOOGLE_CLIENT_ID=votre_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=votre_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8501

# Mode de développement
DEBUG=True
LOG_LEVEL=INFO

# Session
SESSION_SECRET_KEY=une_autre_cle_secrete_pour_les_sessions
SESSION_TIMEOUT_MINUTES=60

# Upload
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,tiff,bmp
